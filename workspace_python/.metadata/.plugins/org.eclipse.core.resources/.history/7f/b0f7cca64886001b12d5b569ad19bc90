import pymysql
from day06 import MysqlConfig

conn = MysqlConfig.conn

col01 = input("col03값을 입력해주십시오( 아이디같은)")

try:
    sql = "update sample set col01 = '1' where col03 ='2'";
    cur = conn.cursor()
    cur.execute(sql)
    conn.commit()
    print(cur.fetchall())
finally:
    cur.close()
    conn.close()